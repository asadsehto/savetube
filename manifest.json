{
  "manifest_version": 3,
  "name": "Video Saver",
  "version": "1.0",
  "description": "Save videos from any site into your personal playlist hub",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  }
}
